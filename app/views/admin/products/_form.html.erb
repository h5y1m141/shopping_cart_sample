<div id="product-form">
  <%= form_for([:admin, @product], class: 'form') do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <item-text-input :label="'商品名'" @update-item="updateTitle"></item-text-input>
    <item-number-input :label="'金額'" @update-item="updatePrice"></item-number-input>
    <%= f.hidden_field :title, ':value' => "product.title" %>
    <%= f.hidden_field :price, ':value' => "product.price" %>

    <div class="form-group row">
      <div class="col-2">
      </div>
      <div class="col-6">
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= link_to '戻る', admin_products_path, class: 'btn btn-info' %>
          </li>
          <li class="list-inline-item">
            <%= f.submit '登録する', class: 'btn btn-primary', ':disabled' => 'disableSubmitButton' %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
